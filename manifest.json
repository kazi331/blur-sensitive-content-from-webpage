{
    "manifest_version": 3,
    "name": "Blur Sensitive Data",
    "version": "1.1",
    "description": "Blur sensitive data on web pages by hovering and clicking, with a toolbar to control blur.",
    "permissions": [
        "activeTab",
        "scripting",
        "storage"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ],
            "css": [
                "toolbar.css"
            ]
        }
    ],
    "icons": {
        "48": "icon48.png",
        "128": "icon128.png"
    },
    "action": {
        "default_title": "Toggle Blur Toolbar"
    }
}